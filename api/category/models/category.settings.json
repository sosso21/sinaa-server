{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name_fr": {
      "type": "string"
    },
    "name_en": {
      "type": "string"
    },
    "name_ar": {
      "type": "string"
    },
    "slug": {
      "type": "uid"
    },
    "products": {
      "via": "categories",
      "collection": "product",
      "dominant": true
    },
    "parent_category_list": {
      "type": "component",
      "repeatable": false,
      "component": "custom.category-list"
    },
    "top_in_nav": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "top_in_page": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "format_profuct": {
      "type": "enumeration",
      "enum": [
        "none",
        "Service",
        "Formation",
        "Job",
        "Item_and_Equipment",
        "Profuct",
        "Transport",
        "Other"
      ],
      "required": true,
      "default": "none"
    }
  }
